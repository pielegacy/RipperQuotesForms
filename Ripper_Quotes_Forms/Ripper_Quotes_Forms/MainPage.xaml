<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Ripper_Quotes_Forms"
             x:Class="Ripper_Quotes_Forms.MainPage"
             Title="Ripper Quotes">
  <ContentPage.Content>
    <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="20"/>
    </Grid.RowDefinitions>
      <ListView x:Name="QuoteList" Grid.Row="0">
        <ListView.ItemTemplate>
          <DataTemplate>
            <ViewCell>
              <Grid Padding="5,10" Margin="0,2">
                <Grid.RowDefinitions>
                  <RowDefinition Height="Auto"></RowDefinition>
                  <RowDefinition Height="25"></RowDefinition>
                </Grid.RowDefinitions>
                <Label Text="{Binding QuoteTextPresent}" FontSize="20" TextColor="Black" HorizontalTextAlignment="Center" Grid.Row="0"></Label>
              <Label Text="{Binding QuoteAuthorPresent}" FontSize="15" TextColor="Black" HorizontalTextAlignment="End" Grid.Row="1"></Label>
              </Grid>
            </ViewCell>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </Grid>
  </ContentPage.Content>
</ContentPage>